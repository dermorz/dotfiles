# i3
set $mode_i3 [r] Reload [Shift+r] Restart [e] Exit
mode "$mode_i3" {
        bindsym r reload, mode "default"
        bindsym Shift+r restart, mode "default"
        bindsym e exec --no-startup-id i3-msg exit, mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+i mode "$mode_i3"

# system
set $locker i3lock -c 000000 && sleep 1
set $mode_system [l] Lock [e] Logout (Exit) [s] Suspend [h] Hibernate [r] Reboot [Shift+s] Shutdown
mode "$mode_system" {
        bindsym l exec --no-startup-id $locker, mode "default" 
        bindsym e exec --no-startup-id i3-msg exit, mode "default"
        bindsym s exec --no-startup-id $locker && systemctl suspend, mode "default"
        bindsym h exec --no-startup-id $locker && systemctl hibernate, mode "default"
        bindsym r exec --no-startup-id systemctl reboot, mode "default"
        bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+e mode "$mode_system"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # move focused window
        bindsym $mod+h move left
        bindsym $mod+j move down
        bindsym $mod+k move up
        bindsym $mod+l move right

        # move workspaces to preferred outputs
        bindsym $mod+Shift+h move workspace to output $external
        bindsym $mod+Shift+l move workspace to output $internal

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# display setup
set $mode_output [i] Internal [e] External [d] Dual
mode "$mode_output" {
        bindsym i exec --no-startup-id "xrandr --output $internal --primary --auto --output $external --off && $polybar", mode "default"
        bindsym e exec --no-startup-id "xrandr --output $external --primary --auto --output $internal --off && $polybar", mode "default"
        bindsym s exec --no-startup-id "xrandr --output $external --primary --mode 1920x1080 --output $internal --off && $polybar", mode "default"
        bindsym Shift+s exec --no-startup-id "xrandr --output $external --primary --mode 1920x1080 --pos 0x0 --output $internal --auto --pos 1920x0 && $polybar", mode "default"
        bindsym d exec --no-startup-id "xrandr --output $external --primary --mode 3840x2160 --pos 0x0 --output $internal --auto --pos 3840x1000 && $polybar", mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+o mode "default"
}
bindsym $mod+o mode "$mode_output"

# redshift modes
set $mode_redshift Set colour temperature: [a] Auto [r] Reset [2] 2500K [3] 3000K [4] 4000K [5] 5000K
set $kill_redshift pkill -9 redshift;
mode "$mode_redshift" {
        bindsym a exec --no-startup-id "$kill_redshift redshift -P", mode "default"
        bindsym r exec --no-startup-id "$kill_redshift redshift -x", mode "default"
        bindsym 2 exec --no-startup-id "$kill_redshift redshift -P -O 2500", mode "default"
        bindsym 3 exec --no-startup-id "$kill_redshift redshift -P -O 3000", mode "default"
        bindsym 4 exec --no-startup-id "$kill_redshift redshift -P -O 4000", mode "default"
        bindsym 5 exec --no-startup-id "$kill_redshift redshift -P -O 5000", mode "default"

        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+Shift+r mode "$mode_redshift"
# initialize with auto
exec_always --no-startup-id $kill_redshift redshift -P


